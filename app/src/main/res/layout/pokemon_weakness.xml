<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgIconWeakness"
        android:layout_width="@dimen/wknsImageView_width"
        android:layout_height="@dimen/wknsImageView_height"
        android:layout_marginTop="@dimen/wknsImageView_marginTop"
        android:layout_marginStart="@dimen/wknsImageView_marginEnd"
        tools:background="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtTitleWeakness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_weakness_text_size"
        android:layout_marginStart="@dimen/wknsTextView_marginStart"
        tools:text="Nome Fraqueza"
        app:layout_constraintStart_toEndOf="@id/imgIconWeakness"
        app:layout_constraintTop_toTopOf="@id/imgIconWeakness"
        app:layout_constraintBottom_toBottomOf="@id/imgIconWeakness"/>

</androidx.constraintlayout.widget.ConstraintLayout>