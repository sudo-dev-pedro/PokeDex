<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:layout_width="@dimen/btn_go_width"
            android:layout_height="@dimen/btn_go_height"
            android:shape="oval"
            android:padding="10dp" >
            <gradient
                android:startColor="@color/steel_color"
                android:endColor="@color/steel_color_gradient"
                android:angle="270" />
            <size
                android:height="32dp"
                android:width="32dp" />
        </shape>
    </item>

    <item android:drawable="@drawable/ic_iron"
        android:bottom="7dp"
        android:left="6dp"
        android:right="6dp"
        android:top="7dp" />
</layer-list>